{
  "name": "lanyon",
  "version": "0.1.15",
  "description": "Jekyll without the Hassle",
  "main": "src/config.js",
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "src/"
    ]
  },
  "files": [
    "Makefile",
    "scripts",
    "src"
  ],
  "bin": {
    "lanyon": "src/cli.js"
  },
  "scripts": {
    "container:build:reset": "env DOCKER_RESET=1 ./container/main.sh build",
    "container:build": " ./container/main.sh build",
    "container:connect": " ./container/main.sh connect",
    "fix": "DEBUG=eslint:cli-engine eslint . --fix",
    "jest:update": "env DEBUG=scrolex:* NODE_ENV=test jest --updateSnapshot",
    "jest:watch": "env DEBUG=scrolex:* NODE_ENV=test jest --watch",
    "jest": "env DEBUG=scrolex:* NODE_ENV=test jest",
    "lint": "DEBUG=eslint:cli-engine eslint .",
    "npublish": "npm publish --otp",
    "push": "git push && git push --tags",
    "release:major": "env SEMANTIC=major npm run release",
    "release:minor": "env SEMANTIC=minor npm run release",
    "release:patch": "env SEMANTIC=patch npm run release",
    "release": "npm version ${SEMANTIC:-patch} -m \"Release %s\" && npm-run-all container:build push npublish",
    "test:acceptance": "./scripts/test-acceptance.sh",
    "test": "npm-run-all lint jest test:acceptance",
    "upgrade:modules": "npm-check-updates -u --semverLevel major && yarn",
    "web:install": "cd website && npm run install",
    "web:start": "cd website && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kvz/lanyon.git"
  },
  "keywords": [
    "jekyll",
    "static",
    "site",
    "generator"
  ],
  "author": "Kevin van Zonneveld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kvz/lanyon/issues"
  },
  "homepage": "https://github.com/kvz/lanyon#readme",
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true
    }
  },
  "devDependencies": {
    "eslint": "6.7.1",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "fakefile": "0.0.9",
    "jest": "21.2.1",
    "npm-check-updates": "2.15.0",
    "npm-run-all": "4.1.5"
  },
  "dependencies": {
    "@babel/core": "7.6.4",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/preset-env": "7.6.3",
    "@babel/preset-react": "7.6.3",
    "assets-webpack-plugin": "3.9.10",
    "autoprefixer": "8.6.5",
    "babel-loader": "8.0.6",
    "bower-webpack-plugin": "0.1.9",
    "browser-sync": "2.26.7",
    "chalk": "2.4.2",
    "common-tags": "1.8.0",
    "css-loader": "0.28.11",
    "depurar": "0.3.0",
    "exports-loader": "0.7.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.11",
    "font-awesome": "4.7.0",
    "font-awesome-loader": "1.0.2",
    "globby": "6.1.0",
    "http-server": "0.11.1",
    "imports-loader": "0.8.0",
    "js-yaml": "3.13.1",
    "less": "2.7.3",
    "less-loader": "4.1.0",
    "lodash": "4.17.15",
    "log-symbols": "2.2.0",
    "log-update": "2.3.0",
    "nanohtml": "1.8.1",
    "node-libs-browser": "2.2.1",
    "node-sass": "4.12.0",
    "nodemon": "1.19.2",
    "optimize-css-assets-webpack-plugin": "3.2.1",
    "os-tmpdir": "1.0.2",
    "pad": "2.3.0",
    "postcss-loader": "2.1.6",
    "react-hot-loader": "4.12.15",
    "resolve-url-loader": "2.3.2",
    "rimraf": "2.7.1",
    "sass-loader": "7.3.1",
    "scrolex": "0.0.27",
    "semver": "5.7.1",
    "spawn-sync": "1.0.15",
    "style-loader": "0.23.1",
    "uglify": "0.1.5",
    "uglify-js": "2.8.29",
    "uglify-loader": "2.0.0",
    "url-loader": "0.6.2",
    "webpack": "3.12.0",
    "webpack-dev-middleware": "1.12.2",
    "webpack-dev-server": "2.11.5",
    "webpack-hot-middleware": "2.25.0",
    "webpack-manifest-plugin": "1.3.2",
    "webpack-md5-hash": "0.0.6",
    "webpack-svgstore-plugin": "4.1.0",
    "webpack-visualizer-plugin": "0.1.11"
  }
}
