{
  "name": "lanyon",
  "version": "0.0.137",
  "description": "Jekyll without the Hassle",
  "main": "src/config.js",
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "src/"
    ]
  },
  "files": [
    "Makefile",
    "scripts",
    "src"
  ],
  "bin": {
    "lanyon": "src/cli.js"
  },
  "scripts": {
    "container:build:reset": "env DOCKER_RESET=1 ./container/main.sh build",
    "container:build": " ./container/main.sh build",
    "container:connect": " ./container/main.sh connect",
    "fix": "DEBUG=eslint:cli-engine eslint . --fix",
    "jest:update": "env DEBUG=scrolex:* NODE_ENV=test jest --updateSnapshot",
    "jest:watch": "env DEBUG=scrolex:* NODE_ENV=test jest --watch",
    "jest": "env DEBUG=scrolex:* NODE_ENV=test jest",
    "lint": "DEBUG=eslint:cli-engine eslint .",
    "npublish": "npm publish",
    "push": "git push && git push --tags",
    "release:major": "env SEMANTIC=major npm run release",
    "release:minor": "env SEMANTIC=minor npm run release",
    "release:patch": "env SEMANTIC=patch npm run release",
    "release": "npm version ${SEMANTIC:-patch} -m \"Release %s\" && npm-run-all container:build push npublish",
    "test:acceptance": "./scripts/test-acceptance.sh",
    "test": "npm-run-all lint jest test:acceptance",
    "upgrade:modules": "npm-check-updates -u --semverLevel major && yarn",
    "web:install": "cd website && npm run install",
    "web:start": "cd website && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kvz/lanyon.git"
  },
  "keywords": [
    "jekyll",
    "static",
    "site",
    "generator"
  ],
  "author": "Kevin van Zonneveld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kvz/lanyon/issues"
  },
  "homepage": "https://github.com/kvz/lanyon#readme",
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true
    }
  },
  "devDependencies": {
    "eslint": "4.13.1",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-node": "5.2.1",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-standard": "3.0.1",
    "fakefile": "0.0.9",
    "jest": "21.2.1",
    "npm-check-updates": "2.13.0",
    "npm-run-all": "4.1.3"
  },
  "dependencies": {
    "assets-webpack-plugin": "3.5.1",
    "autoprefixer": "8.6.1",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.3",
    "babel-loader": "7.1.2",
    "babel-plugin-es6-promise": "1.1.1",
    "babel-plugin-transform-async-to-generator": "6.24.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-plugin-transform-proto-to-assign": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2015-loose": "8.0.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-runtime": "6.26.0",
    "bower-webpack-plugin": "0.1.9",
    "browser-sync": "2.19.0",
    "chalk": "2.3.0",
    "common-tags": "1.5.1",
    "css-loader": "0.28.7",
    "depurar": "0.3.0",
    "es6-promise": "4.1.1",
    "exports-loader": "0.6.4",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.6",
    "font-awesome": "4.7.0",
    "font-awesome-loader": "1.0.2",
    "globby": "6.1.0",
    "http-server": "0.10.0",
    "imports-loader": "0.7.1",
    "js-yaml": "3.10.0",
    "less": "2.7.3",
    "less-loader": "4.0.5",
    "lodash": "4.17.4",
    "log-symbols": "2.1.0",
    "log-update": "2.3.0",
    "node-libs-browser": "2.1.0",
    "node-sass": "4.9.3",
    "nodemon": "1.13.3",
    "optimize-css-assets-webpack-plugin": "3.2.0",
    "os-tmpdir": "1.0.2",
    "pad": "2.0.3",
    "postcss-loader": "2.1.5",
    "react-hot-loader": "3.1.3",
    "resolve-url-loader": "2.2.1",
    "rimraf": "2.6.2",
    "sass-loader": "7.1.0",
    "scrolex": "0.0.27",
    "semver": "5.4.1",
    "spawn-sync": "1.0.15",
    "style-loader": "0.19.1",
    "uglify": "0.1.5",
    "uglify-js": "2.8.29",
    "uglify-loader": "2.0.0",
    "url-loader": "0.6.2",
    "webpack": "3.10.0",
    "webpack-dev-middleware": "1.12.2",
    "webpack-dev-server": "2.9.7",
    "webpack-hot-middleware": "2.21.0",
    "webpack-manifest-plugin": "1.3.2",
    "webpack-md5-hash": "0.0.6",
    "webpack-svgstore-plugin": "4.0.1",
    "webpack-visualizer-plugin": "0.1.11"
  }
}
